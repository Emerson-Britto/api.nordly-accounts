{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "src",
    "paths": {
      "common": ["common"],
      "services": ["services"],
      "controllers": ["controllers"],
      "helpers": ["helpers"],
      "dataBases": ["dataBases"],
      "models": ["models"],
      "mailer": ["mailer"],
      "routers": ["routers"]
    },
    "lib": ["es6"],
    "module": "commonjs",
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}